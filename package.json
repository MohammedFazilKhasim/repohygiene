{
    "name": "repohygiene",
    "version": "0.1.0",
    "description": "One CLI to rule all your repo maintenance - CODEOWNERS, licenses, secrets, branches, and dependencies",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "repohygiene": "dist/cli/index.js",
        "rh": "dist/cli/index.js"
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "codeowners",
        "git",
        "repository",
        "maintenance",
        "license",
        "secrets",
        "branches",
        "dependencies",
        "cli",
        "devtools",
        "security",
        "code-quality",
        "github",
        "automation",
        "developer-tools",
        "linting",
        "code-review",
        "repository-management",
        "git-tools",
        "secret-scanner",
        "license-checker",
        "branch-cleanup"
    ],
    "author": "MohammedFazilKhasim <siddiqmohammed697@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/MohammedFazilKhasim/repohygiene"
    },
    "homepage": "https://github.com/MohammedFazilKhasim/repohygiene#readme",
    "bugs": {
        "url": "https://github.com/MohammedFazilKhasim/repohygiene/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "ora": "^8.0.1",
        "simple-git": "^3.24.0",
        "cli-table3": "^0.6.4",
        "boxen": "^7.1.1",
        "figures": "^6.1.0",
        "cosmiconfig": "^9.0.0",
        "globby": "^14.0.1",
        "ignore": "^5.3.1"
    },
    "devDependencies": {
        "@types/node": "^20.12.7",
        "typescript": "^5.4.5",
        "tsup": "^8.0.2",
        "vitest": "^1.5.0",
        "@vitest/coverage-v8": "^1.5.0",
        "eslint": "^8.57.0",
        "@typescript-eslint/eslint-plugin": "^7.7.0",
        "@typescript-eslint/parser": "^7.7.0",
        "prettier": "^3.2.5"
    }
}